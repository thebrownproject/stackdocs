# ============================================
# Stackdocs Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control

# --------------------------------------------
# Supabase Configuration
# --------------------------------------------
# Get these from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_service_role_key_here  # Use service role key (not anon)

# --------------------------------------------
# Clerk Authentication
# --------------------------------------------
# Get these from: Clerk Dashboard > API Keys
CLERK_SECRET_KEY=sk_test_xxx  # Use sk_live_xxx for production

# Comma-separated list of allowed frontend origins
# Must match where your frontend is hosted
CLERK_AUTHORIZED_PARTIES=http://localhost:3000,https://www.stackdocs.io

# --------------------------------------------
# AI Services
# --------------------------------------------
# Anthropic (Claude) - for document extraction
# Get from: console.anthropic.com > API Keys
ANTHROPIC_API_KEY=sk-ant-xxx
CLAUDE_MODEL=claude-haiku-4-5  # Options: claude-haiku-4-5, claude-sonnet-4-20250514

# Mistral - for OCR
# Get from: console.mistral.ai > API Keys
MISTRAL_API_KEY=your_mistral_api_key_here

# --------------------------------------------
# Application Settings
# --------------------------------------------
ENVIRONMENT=development  # development | staging | production

# DEBUG mode:
# - True: Enables Swagger testing without JWT (uses dev_user_test)
# - False: Full Clerk JWT validation required on all protected routes
DEBUG=True

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
# Frontend URL(s) allowed to make requests (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000
